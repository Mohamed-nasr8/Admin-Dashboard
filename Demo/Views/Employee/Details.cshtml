@model Demo.BL.Models.EmployeeVM

@{
    ViewData["Title"] = "Details";
}


<div class="block-header">
    <a>Details </a>
</div>

<br />

<label asp-for="Name">Employee Id</label>
<input type="text" class="form-control" asp-for="Id" disabled />
<br />

<label asp-for="Name">Employee Name</label>
<input type="text" class="form-control" asp-for="Name" disabled />
<br />


<label asp-for="Salary">Employee Salary</label>
<input type="text" class="form-control" asp-for="Salary" disabled />

<br />


<label asp-for="Email">Employee Email</label>
<input type="text" class="form-control" asp-for="Email" disabled />

<br />

<label asp-for="HireDate">HireDate</label>
<input type="text" class="form-control" asp-for="HireDate" disabled />

<br />
<label asp-for="Salary">Notes</label>
<textarea class="form-control" asp-for="Notes" disabled>

</textarea>

<br />
<div class="demo-checkbox">
    <input type="checkbox" asp-for="IsActive" checked="">
    <label asp-for="IsActive">IsActive</label>
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>
<br />
<select asp-items="(SelectList)ViewBag.DepartmentList" asp-for="DepartmentId">
    <option > Choose Department</option>
</select>




<br />

<center>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back To Data</a>
    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
</center>