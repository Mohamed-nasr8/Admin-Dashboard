@inject Demo.BL.Interface.IEmployeeRep employee
@inject Demo.BL.Interface.IDepartmentRep department

@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<h3> Employees Table</h3>
<table class="table table-striped table-hover table-bordered text-center font-weight-bold">
    <thead class="table-dark">
        <tr>
            <th>@SharedLocalizer["Id"]</th>
            <th>@SharedLocalizer["Name"]</th>
            <th>@SharedLocalizer["Salary"]</th>
            <th>@SharedLocalizer["Department"]</th>
            <th>@SharedLocalizer["District"]</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in employee.Get())
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Salary</td>
                <td>@item.Department.Name   </td>
                <td>@item.District.Name</td>


            </tr>
        }
    </tbody>
</table>


<br />
<h3> Departments Table</h3>

<table class="table table-striped table-hover table-bordered text-center font-weight-bold">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in department.Get())
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Code</td>


            </tr>
        }
    </tbody>
</table>
